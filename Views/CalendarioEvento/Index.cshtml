@model IEnumerable<iSangue.Models.CalendarioEvento>

@{
    ViewData["Title"] = "Index";
    }




    <h1>Index</h1>

    <p>
        <a asp-action="Create">Cadastrar novo evento</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nomeEvento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dataEvento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quantidadeInteressados)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.entidadeColetora.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cedenteLocal.nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomeEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dataEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantidadeInteressados)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.entidadeColetora.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cedenteLocal.nome)
                    </td>
                    <td>
                         <a asp-action="DispararEmails" asp-route-id="@item.id">Enviar email aos doadores</a> |
                        <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
