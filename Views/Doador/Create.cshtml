@model iSangue.Models.Doador

@{
    ViewData["Title"] = "Cadastro Doador";
}

<h1>Cadastro</h1>

<h4>Doador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" required maxlength="100" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sobrenome" class="control-label"></label>
                <input asp-for="sobrenome" class="form-control" required maxlength="100" />
                <span asp-validation-for="sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataNasc" class="control-label"></label>
                <input type="date" class="form-control" required asp-for="dataNasc" />
                <span asp-validation-for="dataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefone" class="control-label"></label>
                <input asp-for="telefone" type="tel" class="form-control" pattern="[0-9]{11}" maxlength="11" min="0" />
                <span asp-validation-for="telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidadeDoacao" class="control-label"></label>
                <select class="form-control" asp-for="cidadeDoacao">
                    <option value="Não sei">Não Sei</option>
                    <option value="São Vicente">São Vicente</option>
                    <option value="Praia Grande">Praia Grande</option>
                    <option value="Mongagua">Mongagua</option>
                    <option value="Itanahem">Itanhaem</option>
                    <option value="Peruibe">Peruibe</option>
                    <option value="Itariri">Itariri</option>
                    <option value="Pedro de Toledo">Pedro de Toledo</option>
                    <option value="Iguape">Iguape</option>
                </select>
                <span asp-validation-for="cidadeDoacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoSanguineo" class="control-label"></label>
                <select class="form-control" asp-for="tipoSanguineo">
                    <option value="Não sei">Não Sei</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
                <span asp-validation-for="tipoSanguineo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" type="email" class="form-control" required maxlength="100" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="senha" class="control-label"></label>
                <input asp-for="senha" class="form-control" required maxlength="50" />
                <span asp-validation-for="senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            <br /><br /></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
