@using Microsoft.AspNetCore.Http;
@{ var tipoUsuario = Context.Session.GetString("TIPO_USUARIO") == null ? "" : Context.Session.GetString("TIPO_USUARIO");
    var nomeUsuario = Context.Session.GetString("NOME_USUARIO") == null ? "" : Context.Session.GetString("NOME_USUARIO");
    var idUsuario = Context.Session.GetString("ID_USUARIO") == null ? "" : Context.Session.GetString("ID_USUARIO");

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@ViewData["Title"] - iSangue</title>
    <link rel="icon" href="~/img/isangue-logo.png">
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-dark" style="background-color: #E15153; ">
            <div class="container">
                <img class="img-fluid" src="~/img/isangue-logo.png" alt="Card image cap" style="width: 25px;height: 25px">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">iSangue</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="dropdown-item text-light bg-transparent" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item text-light bg-transparent" asp-area="" asp-controller="Home" asp-action="ComoFunciona">Como Funciona</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item text-light bg-transparent" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre nós</a>
                        </li>


                        @{
                            if (tipoUsuario.Equals("ADMINISTRADOR"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle bg-transparent" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Doador
                                    </a>
                                    <div class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">

                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="Doador" asp-action="IndexAdmin">Listar (Administrador)</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="Doador" asp-action="Create">Cadastro</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="Doador" asp-action="Index">Editar</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="Doador" asp-action="Index">Detalhes</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="Doador" asp-action="Index">Deletar</a>
                                    </div>
                                </li>
                            }
                        }


                        @{
                            if (tipoUsuario.Equals("ENTIDADE_COLETORA") || tipoUsuario.Equals("ADMINISTRADOR"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle bg-transparent" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Entidade Coletora
                                    </a>
                                    <div class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="EntidadeColetora" asp-action="Index">Listar</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="EntidadeColetora" asp-action="Create">Cadastro</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="EntidadeColetora" asp-action="Index">Editar</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="EntidadeColetora" asp-action="Index">Detalhes</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="EntidadeColetora" asp-action="Index">Deletar</a>
                                    </div>
                                </li>

                            }
                        }

                        @{
                            if (tipoUsuario.Equals("CEDENTE_LOCAL") || tipoUsuario.Equals("ADMINISTRADOR"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle bg-transparent" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Cedente Local
                                    </a>
                                    <div class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CedenteLocal" asp-action="Index">Listar</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CedenteLocal" asp-action="Create">Cadastro</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CedenteLocal" asp-action="Index">Editar</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CedenteLocal" asp-action="Index">Detalhes</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CedenteLocal" asp-action="Index">Deletar</a>
                                    </div>
                                </li>
                            }
                        }





                        @{
                            if (tipoUsuario.Equals("ADMINISTRADOR"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle bg-transparent" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Calendário de Eventos
                                    </a>
                                    <div class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CalendarioEvento" asp-action="Index">Listar (Admin)</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CalendarioEvento" asp-action="ListarEventos">Listar eventos (view de usuário)</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CalendarioEvento" asp-action="Create">Cadastro</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CalendarioEvento" asp-action="Index">Editar</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CalendarioEvento" asp-action="Index">Detalhes</a>
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CalendarioEvento" asp-action="Index">Deletar</a>
                                    </div>
                                </li>
                            }
                        }


                        @{
                            if (!tipoUsuario.Equals("ADMINISTRADOR"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light dropdown-toggle bg-transparent" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Calendário de Eventos
                                    </a>
                                    <div class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item text-dark bg-transparent" asp-area="" asp-controller="CalendarioEvento" asp-action="ListarEventos">Ver todos os Eventos</a>
                                    </div>
                                </li>
                            }
                        }

                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        @{
                            if (nomeUsuario.Equals(""))
                            {
                                <li><a class="text-light bg-transparent" asp-area="" asp-controller="Doador" asp-action="Create"><span class="glyphicon glyphicon-user"></span> Cadastro</a></li>
                                <li><a class="text-light bg-transparent" asp-area="" asp-controller="Usuario" asp-action="Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                            }
                            if (!nomeUsuario.Equals(""))
                            {
                                <li><a class="text-light bg-transparent" asp-area="" asp-controller="@tipoUsuario" asp-action="Edit" asp-route-id="@idUsuario">Olá, @nomeUsuario</a> </li>
                                <li><a class="text-light bg-transparent" asp-area="" asp-controller="Usuario" asp-action="Logout"><span class="glyphicon glyphicon-log-out"></span> Sair</a></li>
                            }}
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - iSangue - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!--<a href="/">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        </a> -->


    <script src="~/js/site.js" asp-append-version="true"></script>




    @RenderSection("Scripts", required: false)
</body>
</html>
